<p id="notice"><%= notice %></p>

<h1>Scout Branches</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scout_branches.each do |scout_branch| %>
      <tr>
        <td><%= scout_branch.description %></td>
        <td><%= link_to 'Show', scout_branch %></td>
        <td><%= link_to 'Edit', edit_scout_branch_path(scout_branch) %></td>
        <td><%= link_to 'Destroy', scout_branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

